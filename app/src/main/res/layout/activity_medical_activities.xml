<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FeedbackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@color/colorPrimaryDark">

        <com.example.victor.moberas.util.InfoButton
            android:id="@+id/ib_activities_diet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </com.example.victor.moberas.util.InfoButton>

        <com.example.victor.moberas.util.InfoButton
            android:id="@+id/ib_activities_catheter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </com.example.victor.moberas.util.InfoButton>

        <com.example.victor.moberas.util.InfoButton
            android:id="@+id/ib_activities_diuresis"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </com.example.victor.moberas.util.InfoButton>

        <com.example.victor.moberas.util.InfoButton
            android:id="@+id/ib_activities_flatus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </com.example.victor.moberas.util.InfoButton>

        <com.example.victor.moberas.util.InfoButton
            android:id="@+id/ib_activities_stool"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </com.example.victor.moberas.util.InfoButton>

        <com.example.victor.moberas.util.InfoButton
            android:id="@+id/ib_activities_drip"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </com.example.victor.moberas.util.InfoButton>

    </LinearLayout>
</LinearLayout>